@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/Modal.html">
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/manutdlogo.png")">
    <style>
        #logoutForm {
            height: 16px;
        }
    </style>

    <title>@ViewBag.Title</title>

</head>

<body class="body">
    <header class="header">
        <div style="background-color:#333; height:20px">

            @if (User.Identity.IsAuthenticated)
            {
                using (Html.BeginForm("Logout", "Account", new { returnUrl = Request.Url.PathAndQuery }, FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()

                    <ul style="display:flex; justify-content: center; margin: 0px 0px 0px 0px; height:20px; padding-left:0">
                        <li style="margin-right:15px">
                            @Html.ActionLink(User.Identity.GetUserName(), "List", "Clothes", routeValues: null, htmlAttributes: new { id = "helloLink" })
                        </li>
                        <li style="background-color:black; padding-left:10px; padding-right:10px"><a class="logOut" href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
                        <il style="display:flex">
                            @Html.Action("Summary", "Basket")
                        </il>
                    </ul>

                }
            }
            else
            {
                <ul style="display:flex;justify-content:center; margin: 0px 0px 0px 0px; height:20px; padding-left:0">
                    <li style="background-color:black; padding-right:10px;padding-left:10px">@Html.ActionLink("Register", "Register", "Account", new { returnUrl = Request.Url.PathAndQuery }, htmlAttributes: new { id = "registerLink" })</li>
                    <li style="background-color:black; color:white">/</li>
                    <li style="background-color:black; padding-left:10px; padding-right:10px">@Html.ActionLink("Log in", "Login", "Account", new { returnUrl = Request.Url.PathAndQuery }, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
            }

        </div>

        <div class="headerContent" style="display:flex">
            <div class="image">
                <a href="https://www.adidas.com/us" target="_blank"><img src=@Url.Content("~/Images/adidasLogo.png") alt="" /></a>
                <a href="https://www.aon.com/home/index.html" target="_blank"><img src=@Url.Content("~/Images/aonLogo.png") alt="" /></a>
            </div>

            <div class="caption">
                <img src="@Url.Content("~/Images/ud_logo.png")">
            </div>

            <div style="margin-top:20px; height:31px; display:flex">
                @Html.Partial("~/Views/Navigation/Search.cshtml")
            </div>

            <div class="image">
                <a href="https://www.chevrolet.com/" target="_blank"><img src=@Url.Content("~/Images/chevroletLogo.png") alt="" /></a>
                <a href="https://www.manutd.com/" target="_blank"><img src=@Url.Content("~/Images/manutdlogo.png") alt="" /></a>
            </div>
        </div>
    </header>

    <div class="menu">
        <ul class="topLevelMenu">
            @Html.Action("Menu", "Navigation")
        </ul>
    </div>

    <content class="content">

            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
            <div id="carousel" class="carousel slide" data-ride="carousel" data-interval="5000">

                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                    <li data-target="#carousel" data-slide-to="3"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Url.Content("~/Images/Carousel_Bruno.jpg")">
                    </div>
                    <div class="item">
                        <img src="@Url.Content("~/Images/D_Carousel_training_promo.jpg")">
                    </div>
                    <div class="item">
                        <img src="@Url.Content("~/Images/carousel_kitR.jpg")">
                    </div>
                    <div class="item">
                        <img src="@Url.Content("~/Images/d_carousel_stay_home.jpg")"/>
                    </div>
                </div>

                <a class="left carousel-control" href="#carousel" role="button" data-co data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" style="color:#333"></span>
                </a>
                <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" style="color:#333"></span>
                </a>
            </div>

            <div class="row panel" style="margin-left:0; margin-right:0; display:flex; margin-top:40px">
                <div id="categories" class="col-xs-3">
                    <h1>Content will be added later</h1>
                </div>
                <div class="col-xs-8" style="display:flex">
                    @RenderBody()
                </div>
            </div>
        
    </content>

    <footer class="footer">
        <div>
            <ul class="footerText">
                <li class="footerTextItem">
                    ©@DateTime.Now.Year Manchester United FC Ltd
                </li>
            </ul>
        </div>

        <div class="image">
            <img src=@Url.Content("~/Images/ManU-fanatics.png") alt="" />
        </div>

        <div class="social">
            <a href="https://www.twitter.com/ManUtd/" target="_blank"><img src=@Url.Content("~/Images/twitter-24.png") alt="" /></a>
            <a href="https://www.instagram.com/manchesterunited/" target="_blank"><img src=@Url.Content("~/Images/instagram-logo.png") alt="" style="height:24px; width:24px" /></a>
            <a href="https://www.facebook.com/manchesterunited" target="_blank"><img src=@Url.Content("~/Images/facebook-24.png") alt="" /></a>
            <a href="https://www.youtube.com/manutd" target="_blank"><img src=@Url.Content("~/Images/youtube.png") alt="" style="width:24px; height:24px" /></a>
            <a href="https://www.pinterest.com/manutd/" target="_blank"><img src=@Url.Content("~/Images/pinterest-24.png") alt="" /></a>
        </div>
    </footer>
</body>
</html>