<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="~/Content/styles.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

	<title>@ViewBag.Title</title>
</head>

<body>
	<header class="header">
		<div class="image">
			<a href="https://www.adidas.com/us" target="_blank"><img src="./Images/adidasLogo.png" alt="" /></a>
			<a href="https://www.aon.com/home/index.html" target="_blank"><img src="./Images/aonLogo.png" alt="" /></a>
		</div>

		<div class="caption">
			<a href="#"><h1>MU Store - the official online megastore</h1></a>
		</div>

		<div class="image">
			<a href="https://www.chevrolet.com/" target="_blank"><img src="./Images/chevroletLogo.png" alt="" /></a>
			<a href="https://www.manutd.com/" target="_blank"><img src="./Images/manutdlogo.png" alt="" /></a>
		</div>
	</header>

	<content class="content">

		<div class="menu">
			<ul class="topLevelMenu" >
				@Html.Action("Menu", "Navigation")
			</ul>
		</div>

		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<div id="carousel" class="carousel slide" data-ride="carousel" data-interval="5000" >

			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#carousel" data-slide-to="0" class="active"></li>
				<li data-target="#carousel" data-slide-to="1"></li>
				<li data-target="#carousel" data-slide-to="2"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				<div class="item active">
					<img src="./Images/Carousel_Bruno.jpg">
				</div>
				<div class="item">
					<img src="./Images/D_Carousel_training_promo.jpg">
				</div>
				<div class="item">
					<img src="./Images/carousel_kitR.jpg">
				</div>
			</div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
			</a>
			<a class="right carousel-control" href="#carousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
			</a>
		</div> <!-- Carousel -->

		<div class="row panel" style="margin-left:0; margin-right:0; display:flex">
			<div id="categories" class="col-xs-3">
				<h2 style="">Content will be added later</h2>
			</div>
			<div class="col-xs-8">
				@RenderBody()
			</div>
		</div>

	</content>

	<footer class="footer">
		<div>
			<ul class="footerText">
				<li class="footerTextItem">
					©2020 Manchester United FC Ltd
				</li>
			</ul>
		</div>

		<div class="image">
			<img src="./Images/ManU-fanatics.png" alt="" />
		</div>

		<div class="social">
			<a href="https://www.twitter.com/ManUtd" target="_blank"><img src="./Images/twitter-24.png" alt="" /></a>
			<a href="https://www.instagram.com/manchesterunited/" target="_blank"><img src="./Images/instagram-logo.png" alt="" style="height:24px; width:24px" /></a>
			<a href="https://www.facebook.com/manchesterunited" target="_blank"><img src="./Images/facebook-24.png" alt="" /></a>
			<a href="https://www.youtube.com/manutd" target="_blank"><img src="./Images/youtube-24.png" alt="" /></a>
			<a href="https://www.pinterest.com/manutd/" target="_blank"><img src="./Images/pinterest-24.png" alt="" /></a>
		</div>
	</footer>
		
</body>
</html>