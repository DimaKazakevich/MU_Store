<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UnitedDirectManager.Styles">

    <ControlTemplate TargetType="Button" x:Key="btTemplate">
        <Border x:Name="brdrBtn" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="#333">
            <ContentControl x:Name="cntntBtn" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Content="{TemplateBinding Content}" Foreground="White"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="brdrBtn" Property="BorderThickness" Value="5,0,0,0" />
                <Setter TargetName="brdrBtn" Property="BorderBrush" Value="black" />
                <Setter Property="Opacity" Value="0.5" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="brdrBtn" Property="BorderThickness" Value="5,0,0,0" />
                <Setter TargetName="brdrBtn" Property="BorderBrush" Value="black" />
                <Setter Property="Opacity" Value="0.7"/>
                <Setter TargetName="brdrBtn" Property="Cursor" Value="Hand" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>